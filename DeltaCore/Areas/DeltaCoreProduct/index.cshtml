
@{
    ViewBag.Title = "ProductService";
}


<link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" />

<div class="row">
    <div class="col-lg-12 card">
         <div class="card-header">
              <h3 class="card-title">Products</h3>
         </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 col-lg-4" >
                    <div class="form-group">
                        <label class="form-label">Product Name</label>
                        <input type="text" class="form-control" name="example-text-input" maxlength="64" tabindex="1" id="txtProdName" placeholder="Please enter Product name.">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-4">
                        <div class="form-group">
                            <label class="form-label">Description</label>
                            <input type="text" class="form-control" name="example-text-input" maxlength="225" tabindex="1" id="txtDes" placeholder="Please enter Product Description.">
                        </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-left">
            <div class="d-flex">
                <a href="javascript:void(0)" class="btn btn-link" id="btnCancel">Cancel</a>
                <button type="submit" class="btn btn-primary ml-auto" id="btnSubmit">Send data</button>
            </div>
        </div><br />
        <table id="example" class="display" style="width:100%;">
            <thead>
                <tr>
                    <th>ProductID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{

   
   <script src="~/Areas/DeltaCoreProduct/Scripts/Products.js"></script>
   
    <script src="~/Content/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            ManageProduct.Init();
          
        });
    </script>
}